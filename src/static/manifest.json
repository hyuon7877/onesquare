  "shortcuts": [
    {
      "name": "대시보드",
      "description": "메인 대시보드로 바로 이동",
      "url": "/dashboard/",
      "icons": [
        {
          "src": "/static/images/shortcuts/dashboard-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "로그인",
      "description": "로그인 페이지로 바로 이동",
      "url": "/auth/login/",
      "icons": [
        {
          "src": "/static/images/shortcuts/login-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "현장 리포트",
      "description": "현장 리포트 작성",
      "url": "/reports/field/",
      "icons": [
        {
          "src": "/static/images/shortcuts/report-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "오프라인 모드",
      "description": "오프라인으로 저장된 데이터 보기",
      "url": "/offline/",
      "icons": [
        {
          "src": "/static/images/shortcuts/offline-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  
  "categories": [
    "business",
    "productivity",
    "utilities"
  ],
  
  "screenshots": [
    {
      "src": "/static/images/screenshots/desktop-login.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "OneSquare 로그인 화면"
    },
    {
      "src": "/static/images/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "OneSquare 대시보드"
    },
    {
      "src": "/static/images/screenshots/mobile-login.png",
      "sizes": "640x1136",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "모바일 로그인 화면"
    },
    {
      "src": "/static/images/screenshots/mobile-dashboard.png",
      "sizes": "640x1136",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "모바일 대시보드"
    }
  ],
  
  "prefer_related_applications": false,
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "file_handlers": [
    {
      "action": "/files/",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xlsx", ".xls"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "onesquare",
      "url": "/app/?action=%s"
    }
  ],
  
  "share_target": {
    "action": "/share/",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", ".pdf", ".doc", ".docx"]
        }
      ]
    }
  }
}